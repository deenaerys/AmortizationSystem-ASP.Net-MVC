@model Amortization_System.Models.BuyerViewModel
@{
    ViewData["Title"] = "Buyer Information";
    var errorMessage = TempData["errorMessage"]?.ToString();
}


@*<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>*@
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong>@errorMessage</strong>
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
}
<div class="card" style="width: 18rem;">    
    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"] </h5>
        <div class="mb-1">           
            <label class="form-label">Buyer ID </label>
            <input type="text" class="form-control" id="buyer_name" asp-for="id" readonly/>

        </div>
        <div class="mb-1">
            <label class="form-label">Buyer Name</label>
            <input type="text" class="form-control" id="buyer_name" asp-for="buyer_name" readonly />
           
        </div>
        <div class="mb-1">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" id="address" asp-for="address" readonly />
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Project Name</label>
            <input type="text" class="form-control" id="project_name" asp-for="project_name" readonly />
            <span asp-validation-for="project_name" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Condo Unit</label>
            <input type="text" class="form-control" id="condo_unit" asp-for="condo_unit" readonly />
            <span asp-validation-for="condo_unit" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Loan Amount</label>
            <div class="input-group">
                <span class="input-group-text">₱</span>
                @{
                    string formattedLoanAmount = Model.loan_amount.ToString("N2");
                }
                <input type="text" class="form-control" id="loan_amount" value="@formattedLoanAmount" readonly />

            </div>

        </div>
        <div class="mb-1">
            <label class="form-label">Payment Term</label>
            <input type="number" step="1" class="form-control" id="payment_term" asp-for="payment_term" readonly />
            <span asp-asp-validation-for="payment_term" class="text-danger"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Payment Start Date</label>
            <input type="date" class="form-control" id="payment_start" asp-for="payment_start" readonly />
           
        </div>
        <div class="mb-3">
            <label class="form-label">Interest Rate (%)</label>
            <input type="number" step="0.01" class="form-control" id="interest_rate" asp-for="interest_rate" readonly />
           
        </div>
        <a asp-controller="Buyers" asp-action="Amort" class="btn btn-dark" asp-route-id="@Model.id">Build Amortization Schedule</a>
    </div>   
</div>



